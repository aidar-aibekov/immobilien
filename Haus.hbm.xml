<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.Haus" table="haus" schema="immobilien">
        <id name="id_haus">
            <column name="id_haus" sql-type="int"/>
        </id>
        <property name="address">
            <column name="address" sql-type="varchar(255)" length="255" not-null="true"/>
        </property>
        <property name="schaetzung">
            <column name="schaetzung" sql-type="int(1)" length="1" not-null="true"/>
        </property>
        <property name="preis">
            <column name="preis" sql-type="int(1)" length="1" not-null="true"/>
        </property>
        <set name="kaufinteressanten" table="haus_kaufint" cascade="all">
            <key column="haus_id" />
            <many-to-many column="kauf_id"  class="entities.Kaufinteressanten" />
        </set>
        <one-to-one name="besitzer" class="entities.Besitzer"
                    cascade="save-update"/>
        <set name="verkaefer" table="verkauf"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="haus_id" not-null="true" />
            </key>
            <one-to-many class="entities.Verkauf" />
        </set>

    </class>
</hibernate-mapping>