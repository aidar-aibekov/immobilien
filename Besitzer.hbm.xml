<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.Besitzer" table="besitzer" schema="immobilien">
        <id name="id_besitzer">
            <column name="id_besitzer" sql-type="int"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)" length="255" not-null="true"/>
        </property>
        <property name="telefonnummer">
            <column name="telefonnummer" sql-type="varchar(255)" length="255" not-null="true"/>
        </property>
        <one-to-one name="haus" class="entities.Haus"
                    constrained="true"/>

    </class>
</hibernate-mapping>